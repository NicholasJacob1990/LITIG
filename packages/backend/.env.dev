# =============================================================================
# LITIG-1 - Configuração de Desenvolvimento
# =============================================================================
# Copie este arquivo para .env.dev e preencha os valores reais

# =============================================================================
# Banco de Dados (Opção A: PostgreSQL Local via Docker)
# =============================================================================
DATABASE_URL=postgresql://litigo:litigo@database:5432/litigo_dev

# =============================================================================
# Redis (Para Celery)
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# AutoML - Feature Flags
# =============================================================================
ENABLE_AUTOML_RETRAIN=true
FALLBACK_TO_DEFAULT_WEIGHTS=true
AUTOML_MIN_FEEDBACK_THRESHOLD=50

# =============================================================================
# APIs Externas - CONFIGURE COM SUAS CHAVES REAIS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Perplexity
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Configurações de Desenvolvimento
# =============================================================================
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development
RATE_LIMITING_ENABLED=false
CACHE_TTL_SECONDS=300
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
