# ============================================
# CONFIGURAÇÕES PRINCIPAIS DA APLICAÇÃO
# ============================================

# Ambiente da aplicação
ENVIRONMENT=development
FLASK_DEBUG=True
SECRET_KEY=your_super_secret_key_here_change_in_production

# URLs da aplicação
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ============================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ============================================

# PostgreSQL principal
DATABASE_URL=postgresql://user:password@localhost:5432/litgo_db
SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost:5432/litgo_db
SQLALCHEMY_ECHO=False

# Supabase (alternativo)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# ============================================
# CONFIGURAÇÕES REDIS CACHE
# ============================================

# Redis para cache e sessões
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# TTL de cache por fonte de dados
LINKEDIN_CACHE_TTL_HOURS=6
ACADEMIC_CACHE_TTL_HOURS=24
ESCAVADOR_CACHE_TTL_HOURS=12
JUSBRASIL_CACHE_TTL_HOURS=12
DEEP_RESEARCH_CACHE_TTL_HOURS=48
INTERNAL_CACHE_TTL_HOURS=1

# ===== CONFIGURAÇÕES UNIPILE SDK =====

# Credenciais principais Unipile
UNIPILE_API_KEY=your_unipile_api_key_here
UNIPILE_API_SECRET=your_unipile_api_secret_here
UNIPILE_BASE_URL=https://api.unipile.com

# Token de autenticação do Unipile (obrigatório)
UNIPILE_API_TOKEN=your_unipile_token_here
# ou alternativo
UNIFIED_API_KEY=your_unified_api_key_here

# Configuração do serviço preferido
# Opções: sdk_official, wrapper_nodejs, auto_fallback
UNIPILE_PREFERRED_SERVICE=sdk_official

# Região do servidor Unipile
# Opções: north-america, europe, australia
UNIPILE_SERVER_REGION=north-america

# DSN legacy (para compatibilidade com wrapper Node.js)
UNIPILE_DSN=api.unipile.com

# Configurações avançadas
UNIPILE_ENABLE_FALLBACK=true
UNIPILE_HEALTH_CHECK_INTERVAL=300
UNIPILE_TIMEOUT_SECONDS=30

# Rate limiting
UNIPILE_RATE_LIMIT_REQUESTS=100
UNIPILE_RATE_LIMIT_WINDOW=3600

# Logging
UNIPILE_LOG_LEVEL=INFO
UNIPILE_LOG_REQUESTS=false

# ============================================
# CONFIGURAÇÕES PERPLEXITY ACADEMIC
# ============================================

# API Key da Perplexity
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# Rate limiting Perplexity
PERPLEXITY_RATE_LIMIT_REQUESTS=30
PERPLEXITY_RATE_LIMIT_WINDOW=3600
PERPLEXITY_MAX_RETRIES=3

# ============================================
# CONFIGURAÇÕES ESCAVADOR
# ============================================

# API do Escavador
ESCAVADOR_API_KEY=your_escavador_api_key
ESCAVADOR_BASE_URL=https://api.escavador.com
ESCAVADOR_RATE_LIMIT_REQUESTS=100
ESCAVADOR_RATE_LIMIT_WINDOW=3600

# ============================================
# CONFIGURAÇÕES JUSBRASIL
# ============================================

# API do JusBrasil
JUSBRASIL_API_KEY=your_jusbrasil_api_key
JUSBRASIL_BASE_URL=https://api.jusbrasil.com.br
JUSBRASIL_RATE_LIMIT_REQUESTS=100
JUSBRASIL_RATE_LIMIT_WINDOW=3600

# ============================================
# CONFIGURAÇÕES DEEP RESEARCH
# ============================================

# Serviço de pesquisa avançada
DEEP_RESEARCH_API_KEY=your_deep_research_api_key
DEEP_RESEARCH_BASE_URL=https://api.deepresearch.com
DEEP_RESEARCH_RATE_LIMIT_REQUESTS=20
DEEP_RESEARCH_RATE_LIMIT_WINDOW=3600

# ============================================
# CONFIGURAÇÕES DE EMBEDDINGS
# ============================================

# OpenAI para embeddings de fallback
OPENAI_API_KEY=your_openai_api_key

# Google Gemini para embeddings principais
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-pro

# ============================================
# CONFIGURAÇÕES DE QUALIDADE DE DADOS
# ============================================

# Thresholds de qualidade
DATA_QUALITY_MIN_THRESHOLD=0.5
DATA_COMPLETENESS_MIN_THRESHOLD=0.6
DATA_CONFIDENCE_MIN_THRESHOLD=0.7

# Configurações de consolidação
MAX_CONCURRENT_SOURCES=3
TOTAL_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3

